# Database
DATABASE_URL=sqlite+aiosqlite:///./data/onotebook.db

# CORS (comma-separated origins)
CORS_ORIGINS=http://localhost:3000

# Ollama LLM
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_TIMEOUT=300
DEFAULT_LLM_MODEL=llama3.2

# Storage paths
CHROMA_PERSIST_DIRECTORY=./data/chroma
UPLOAD_DIRECTORY=./data/uploads

# Embedding model
EMBEDDING_MODEL=BAAI/bge-small-en-v1.5

# Chunking settings
CHUNK_SIZE=512
CHUNK_OVERLAP=50

# Upload limits
MAX_UPLOAD_SIZE_MB=50
MAX_SOURCES_PER_NOTEBOOK=50

# Source extraction
URL_EXTRACTION_TIMEOUT=30
MAX_URL_CONTENT_SIZE_MB=10

# Web search - Tavily (https://tavily.com - get free API key)
TAVILY_API_KEY=

# Source guide
SOURCE_GUIDE_MAX_CHUNKS=10
